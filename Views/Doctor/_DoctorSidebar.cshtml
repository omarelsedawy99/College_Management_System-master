<!-- BEGIN SIDEBAR -->
<div class="sidebar">
    <div class="logopanel">
    </div>
    <div class="sidebar-inner">
        <div class="sidebar-top big-img">
            <div class="user-image">
                @{
                    if (doctor.User.UserPicture == null)
                    {
                        <img src="~/Database/Images/user-avatar.png" class="img-responsive img-circle" style="height: 120px; width: 100%;">
                    }
                    else
                    {
                        <img src="@Url.Content(doctor.User.UserPicture.Path)" class="img-responsive img-circle" style="height: 120px; width: 100%;">
                    }
                }
            </div>
            <h4>@doctor.User.FullName.Split(' ')[0]</h4>
        </div>
        <Br>
        <ul class="nav nav-sidebar">
            <li class="tm nav-active"><a href="@Url.Action("Index", "Doctor")"><i class="fas fa-archway" style="font-size:large;"></i><span>Home</span></a></li>
            <li class="tm nav-active"><a href="#"><i class="fas fa-book-open" style="font-size:large;"></i><span>Subjects</span></a></li>
            <li class="tm nav-active"><a href="#"><i class="fas fa-calendar-alt" style="font-size:large;">&nbsp;</i><span>Timetable</span></a></li>
            <li class="tm nav-active">
                <a href="#"><i class="fas fa-envelope" style="font-size:large;"></i><span>Mailbox</span> <span class="fa arrow"></span></a>
            </li>
        </ul>
        <div class="sidebar-widgets" style=""></div>
        <div class="sidebar-footer clearfix" style="">
            <a class="pull-left toggle_fullscreen" href="#" data-rel="tooltip" data-placement="top" data-original-title="Fullscreen">
                <i class="icon-size-fullscreen"></i>
            </a>
            <a class="pull-left btn-effect" href="#" data-modal="modal-1" data-rel="tooltip" data-placement="top" data-original-title="Logout">
                <i class="icon-power"></i>
            </a>
        </div>
    </div>
</div>
<!-- END SIDEBAR -->